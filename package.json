{
    "name": "mockly-vsc",
    "version": "1.0.0",
    "description": "Core library for directly mocking VSCode extension in ViTest.",
    "license": "MIT",
    "author": "Your Name or Org <your-email@example.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/your-username/mockly.git"
    },
    "bugs": {
        "url": "https://github.com/your-username/mockly/issues"
    },
    "keywords": [
        "mock",
        "mocking",
        "test",
        "typescript",
        "javascript",
        "library",
        "tool"
    ],
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "engines": {
        "node": ">=18.0.0"
    },
    "scripts": {
        "prepublishOnly": "npm run build",
        "build": "npm run clean && node ./build/ESBuild/esbuildDual.config.mjs && npm run build:types",
        "build:types": "tsc --emitDeclarationOnly --outDir dist",
        "build:dev": "npm run clean && node ./esbuild.config.mjs --dev",
        "watch": "node ./esbuild.config.mjs --watch",
        "lint": "eslint",
        "tsc": "tsc --noEmit",
        "tsw": "tsc --noEmit --watch",
        "test": "vitest run",
        "clean": "rimraf dist",
        "gulp:compile": "gulp compile-ts",
        "gulp:watch": "gulp watch-ts",
        "Utility:Increment_Version": "node src/scripts/js/bump_version_num.js",
        "Utility:Clean_Up": "rimraf dist && rimraf out",
        "Utility:Recreate_Node": "rimraf node_modules package-lock.json && npm install",
        "Validate": "npm run lint && tsc --noEmit",
        "Validate:Packages": "npm run Validate:View_Excess_Dependencies && npm run Validate:Dependencies:View_Depreciated_Packages",
        "Validate:View_Excess_Dependencies": "node src/scripts/js/check_excess_packages.js",
        "Validate:Dependencies:View_Depreciated_Packages": "npm run clear && node src/scripts/js/check_depreciated.js",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "docs:preview": "vitepress preview docs",
        "clear": "powershell -Command Clear-Host",
        "cleanNode": "npm prune; npm dedupe; npm audit fix"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^4.13.0",
        "@types/micromatch": "^4.0.9",
        "@types/node": "22.x",
        "@types/vscode": "^1.100.0",
        "@typescript-eslint/eslint-plugin": "^8.32.1",
        "@typescript-eslint/parser": "^8.32.1",
        "@vitest/coverage-v8": "^3.1.3",
        "chalk": "^5.4.1",
        "dprint": "^0.49.1",
        "esbuild": "^0.25.4",
        "eslint": "^9.26.0",
        "eslint-plugin-n": "^17.18.0",
        "fancy-log": "^2.0.0",
        "gulp": "^5.0.0",
        "reflect-metadata": "^0.2.2",
        "rimraf": "^6.0.1",
        "tsyringe": "^4.10.0",
        "typescript": "^5.8.3",
        "vitepress": "^1.6.3",
        "vitest": "^3.1.3",
        "vscode-uri": "^3.1.0"
    }
}
