{
    "version": "2.0.0",
    "tasks": [


        {   "label": "watch", "dependsOn": ["transfer_package_json", "npm: watch:tsc", "npm: watch:esbuild"],
            "icon": { "id": "sync" } ,
            "presentation": { "reveal": "never" },
            "group": { "kind": "build", "isDefault": true }
        }   ,

        {   "label": "transfer_package_json",
            "hide": true,
            "type": "npm",
            "script": "Utility:Transfer_Package_Parts",
            "group": { "kind": "build" },
            "presentation": { "group": "watch", "reveal": "never" }
        }   ,

        {   "label": "npm: watch:esbuild",
            "hide": true,
            "type": "npm",
            "script": "Watch:Esbuild_Watch",
            "group": "build",
            "problemMatcher": "$esbuild-watch",
            "isBackground": true,
            "presentation": { "group": "watch", "reveal": "never" }
        }   ,

        {   "label": "npm: watch:tsc",
            "hide": true,
            "type": "npm",
            "script": "Watch:TSC_Watch",
            "group": "build",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": { "group": "watch", "reveal": "never" }
        }   ,




        {
            "label": "Debug ESLint",
            "type": "shell",
            "command": "yarn lint:debug", // Assuming your package.json script is "lint:debug"
            "isBackground": true, // Keep ESLint running in the background
            "problemMatcher": [] // Prevent ESLint output from being treated as errors
        },

        {
            "label": "Attach to ESLint",
            "type": "shell", // Change type to "shell"
            "command": "node attach --debug-port=9229", // Use "node attach"
            "dependsOn": ["Debug ESLint"],
            "isBackground": true, // Optional: Keep the task running
            "problemMatcher": [] // Optional: Prevent output from being treated as errors
        }




    ]
}




